<section class="section" id="VIEW_AND_CHECK">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="center-heading">
                    <h2 style="font-size:40px;">Check for used tickets </h2>

                </div>
                <div class="ticket-counts">
                    <h4 class="booked-count">Booked tickets</h4>
                    <h4 class="remaining-count">Remaining tickets</h4>
                </div>

                <div class="button-container">
                    <div class="left-buttons">
                        <button class="btn btn-primary" onclick="openPopup('VIPs')">VIPs</button>
                        <button class="btn btn-secondary" onclick="openPopup('Standared')">Standared</button>
                        <button class="btn btn-success" onclick="openPopup('free')">free</button>
                    </div>
                    <div class="right-buttons">
                        <button class="btn btn-info" onclick="openPopup('day_1')">day_1</button>
                        <button class="btn btn-warning" onclick="openPopup('day_2')">day_2</button>
                        <button class="btn btn-danger" onclick="openPopup('day_3')">day_3</button>
                        <button class="btn btn-dark" onclick="openPopup('day_4')">day_4</button>
                    </div>
                </div>

                <div id="popup" class="popup">
                    <div class="popup-content">
                        <span class="close" onclick="closePopup()">&times;</span>
                        <p id="popup-text"></p>
                        <button onclick="closePopup()">Close</button>
                    </div>
                </div>

                <script>
                    function openPopup(buttonText) {
                        var popup = document.getElementById("popup");
                        var popupText = document.getElementById("popup-text");
                        popup.style.display = "block";
                        popupText.innerHTML = "10";
                    }

                    function closePopup() {
                        document.getElementById("popup").style.display = "none";
                    }
                </script>







            </div>

        </div>
    </div>
    </div>
    </div>
</section>
