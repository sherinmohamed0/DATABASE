@page
@model ZewailCiryScienceWeek.Pages.registrarModel
@{
    Layout = "_Layoutregister";
}
<section class="section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                 data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <h2>01</h2>
                        <br> <br> <br> <br>
                        @*<img src="~/images/features-icon-1.png" alt="">*@
                        <h4>Add New Ticket</h4>
                        <br>
                        <button href="#" onclick="openStform()"><span class="text">Add standard ticket</span></button>
                        <br><br>
                        <button onclick="openFrform()"><span class="text">Add free ticket</span></button>


                        </a>
                    </div>
                </div>
            </div>





            <div id="stform" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closestform()">&times;</span>
                    <h2 style="color:#2a2a2a">Add a standard ticket</h2>
                    <br><br>

                    <form method="post" action="index.html">
                        <label for="ticket-quantity">Number of tickets:</label>
                        <input type="number" id="ticket-quantity" name="ticket-quantity" min="1" value="1">



                        <br><br>
                        <label for="date-attending">Date of attending:</label>
                        <input type="date" id="date-attending" name="date-attending">
                        <button type="submit"><span class="text">Confirm</span></button>


                    </form>
                </div>
            </div>

            <div id="Frform" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closeFrform()">&times;</span>
                    <h2 style="color:#2a2a2a">Add a Free ticket</h2>
                    <br><br>

                    <form method="post" action="index.html">
                        <label for="ticket-quantity">Number of tickets:</label>
                        <input type="number" id="ticket-quantity" name="ticket-quantity" min="1" value="1">


                        <br><br>
                        <label for="date-attending">Date of attending:</label>
                        <input type="date" id="date-attending" name="date-attending">
                        <br><br>


                        <label for="ticket-type">Type of ticket:</label>
                        <input type="text" id="ticket-type" name="ticket-type">
                        <br><br>

                        <label for="promo-code">Promo code:</label>
                        <input type="text" id="promo-code" name="promo-code">
                        <br><br>




                        <button type="submit"><span class="text">Confirm</span></button>

                    </form>
                </div>
            </div>


            <script>
                function openStform() {
                    document.getElementById("stform").style.display = "block";
                }

                // Close the login form popup
                function closestform() {
                    document.getElementById("stform").style.display = "none";
                }
                function openFrform() {
                    document.getElementById("Frform").style.display = "block";
                }

                // Close the login form popup
                function closeFrform() {
                    document.getElementById("Frform").style.display = "none";
                }
            </script>




            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                 data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <h2>02</h2>
                        <br> <br> <br> <br>
                       @* <img src="~/images/features-icon-2.png" alt="">*@
                        <h4>View All Data About Visitors</h4>
                        <br><br><br>
                        <a href="#VIEW_AND_CHECK" class="main-button">
                            View
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                 data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <h2>03</h2>
                        <br> <br> <br> <br>
                       @* <img src="~/images/features-icon-3.png" alt="">*@
                        <h4>Check For Used Ticket</h4>
                        <br><br><br>
                        <a href="#VIEW_AND_CHECK" class="main-button">
                            CHECK
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Features Big Item End ***** -->

